  body
    header
      nav
        ul
          li
            a(href="/item/create") Create Item
          li
            a(href="/category/create") Create Category
          

    main
      aside
        h2 Sidebar
        ul
          li 
            a(href="/") All
          each category in categories
            li
              a(href=category.url) #{category.name}

    section
      h1= title
      block content


