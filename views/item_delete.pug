extends layout

block content

  p #[strong Do you really want to delete this Item?]

  div(style="margin-left:20px")

    p #[strong Name: ] #{item.name}

    p #[strong Description:] #{item.description}

  form(method='POST')
    div.form-group
      input#id.form-control(type='hidden',name='id', value=item._id )

    button.btn.btn-primary(type='submit') Delete