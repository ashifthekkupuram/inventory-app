extends layout

block content

  form(method='POST')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text' placeholder='Toys, Food etc.' name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description
      textarea#description.form-control(placeholder='Description...' name='description')= (undefined===category ? '' : category.description)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg